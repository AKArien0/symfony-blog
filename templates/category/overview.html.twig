
{% extends 'base.html.twig' %}

{% block title %}
    Category Details
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>{{ category.name }}</h2>
        </div>
        <div class="card-body">
            <p><strong>Description:</strong></p>
            <p>{{ category.description }}</p>
        </div>
    </div>

    <div class="mt-4">
        <h3>Posts under "{{ category.name }}"</h3>
        {% include 'post/list.html.twig' with { posts: category.posts } %}
    </div>
</div>
{% endblock %}

