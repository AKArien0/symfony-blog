{% extends 'base.html.twig' %}

{% block title %}Articles List{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="mb-4">Articles</h1>
        
        {% if posts is not empty %}
            <div class="list-group">
                {% for post in posts %}
                    <div class="list-group-item">
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="mb-1">
                                    <a href="{{ path('post_show', {'id': post.id}) }}" class="text-decoration-none">
                                        {{ post.title }}
                                    </a>
                                </h5>
                                <p class="mb-1">{{ post.content | slice(0, 150) ~ '...' }}</p>
                                <small>Published on {{ post.publishedAt|date('Y-m-d H:i') }} by {{ post.creator.username }}</small>
                            </div>
                            <div class="col-md-4">
                                {% if post.picture %}
                                    <img src="{{ asset('uploads/images/' ~ post.picture) }}" alt="{{ post.title }}" class="img-fluid rounded">
                                {% else %}
                                    <img src="https://via.placeholder.com/150" alt="No Image" class="img-fluid rounded">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>No articles found.</p>
        {% endif %}
    </div>
{% endblock %}

